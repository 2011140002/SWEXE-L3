<h3>今どうしてる？</h3>

<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @tweet.errors.full_messages.each do |t| %>
        <li><%= t %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @tweet , url: {action: :create} do |t| %>

<%= t.label :message, '' %>
<%= t.text_field :message %><br>

<%= t.label :image, '画像を選択' %>
<%= t.file_field :image %><br>
<br>
<%= t.submit '投稿' %>


<% end %>
<br>

<%= button_to '戻る', root_path, {method: :get} %>