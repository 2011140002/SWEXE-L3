<h3>今どうしてる？</h3>

<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @tweet.errors.full_messages.each do |t| %>
        <li><%= t %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @tweet , url: {action: :create} do |t| %>

<%= t.text_area :message , class: "text_form"%><br>
<%= t.file_field :image , class: "image_form"%><br><br>

<%= link_to '戻る', root_path, {method: :get, class: "btn_back"} %>
<%= t.submit '投稿' ,class: "btn_edit" %>

<% end %>
<br>

