<h1>新規Tweet</h1>

<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @tweet.errors.full_messages.each do |t| %>
        <li><%= t %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @tweet , url: {action: :create} do |t| %>

<%= t.label :message, 'メッセージ' %>
<%= t.text_field :message %>

<%= t.label :tweet_image %>
<%= t.file_field :tweet_image %>
<%= t.hidden_field :tweet_image_cache %> 
<!--保存が失敗した場合のために画像情報をキャッシュしておく-->

<%= t.submit '投稿' %>


<% end %>

<%= link_to '戻る', '/' %>