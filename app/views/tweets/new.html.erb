<h1>新規Tweet</h1>

<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @tweet.errors.full_messages.each do |t| %>
        <li><%= t %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @tweet , url: {action: :create} do |t| %>

<%= t.label :message, 'メッセージ' %>
<%= t.text_field :message %><br>

<%= t.label :tweet_image, '画像を選択' %>
<%= t.file_field :tweet_image %><br>
<br>
<%= t.submit '投稿' %>

<br>
<% end %>

<%= button_to '戻る', '/' %>