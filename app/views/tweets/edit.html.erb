

<% if @tweet.errors.any? %>
  <div>
    <ul>
      <% @tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="tweets">
    <div class="account">
    <col><%= image_tag "twitter.png" , :size=>'50x50' %></col>
        <col>名前</col>
        <col>@username</col>
        <col>・</col>
        <col><%= l @tweet.tdate , format: :short %></col>
    </div>
        
            <%= form_for @tweet, url: {action: :update} do |t| %>

<%= t.label :message, 'メッセージ' %>
<%= t.text_area :message %><br>

<%= t.label :image, '画像を選択' %>
<%= t.file_field :image %><br>

<%= t.submit '修正' %>


<% end %>
            
    
            

