<h1>Tweet編集</h1>

<% if @tweet.errors.any? %>
  <div>
    <ul style="color: red">
      <% @tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @tweet, url: {action: :update} do |t| %>

<%= t.label :message, 'メッセージ' %>
<%= t.text_field :message %>

<%= t.submit '修正' %>

<% end %>

<%= link_to '戻る', '/' %>