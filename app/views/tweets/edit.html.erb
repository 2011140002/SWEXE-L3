<h1>Tweet編集</h1>

<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @tweet.errors.full_messages do |t| %>
        <li><% flash[:notice] = t %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @tweet, url: {action: :update} do |t| %>

<%= t.label :message, 'メッセージ' %>
<%= t.text_field :message %>

<%= t.submit '修正' %>

<% end %>