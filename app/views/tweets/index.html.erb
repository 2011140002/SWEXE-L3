<h1>Tweet一覧</h1>

<!--アップローダーファイル-->



<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<% @tweets.each do |t| %>

<%= t.message %><br>
<% if t.image != nil %>
<%= image_tag "/get_image/#{t.id}", :size => '70x70' %><br>
<% end %>
(<%= (Time.current - t.tdate).floor / 60 %>分前)
<%= link_to '削除', "/tweets/#{t.id}", method: :delete %>
<%= link_to '編集', "/tweets/#{t.id}/edit" %>
<%= link_to '詳細', tweet_path,t.id %>
<br><br>
<% end %>

<br><br>
<%= link_to '新規投稿', new_tweet_path %>